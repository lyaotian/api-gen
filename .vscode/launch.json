    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/bin/bundle.js",
            "cwd": "${workspaceRoot}/bin",
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/bin/**/*"],
            "stopOnEntry": false,
            "args": [
                "-c",
                "../config.json",
                "-o",
                "ts"
            ],
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ]
        }
    ]
}